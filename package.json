{
  "name": "portfolio-backend",
  "version": "0.0.1",
  "description": "A RESTful API for personal portfolio website.",
  "main": "index.js",
  "scripts": {
    "test": "concurrently \"docker compose up -d\" \"mocha --exit -r ts-node/register src/**/*.test.ts\"",
    "test:full": "concurrently \"docker compose up -d\" \"mocha --exit -r ts-node/register src/**/*.test.ts\"",
    "build": "npx tsc",
    "start": "node dist/index.js",
    "dev": "nodemon ./src/index.ts",
    "migrate": "npx prisma migrate dev --name init",
    "deploy": "cd ./src/public/frontend && npm run build && cd .. && cd .. npm run build"
  },
  "keywords": [
    "api",
    "resftulAPI",
    "express.js",
    "typescript",
    "javascript"
  ],
  "author": "Thomas Mechessa",
  "license": "ISC",
